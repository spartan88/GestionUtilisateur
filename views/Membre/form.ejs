<div class="center-block">

    <form class="form-horizontal" id="createMembre" action='/membre/create' method='POST'>

        <% if( flash && flash.erreur ){ %>        
          <ul class="alert alert-warning">
               <li><%- flash.erreur %></li>
          </ul>
        <% } %>
     
      <div class="form-group">
        <div class="col-xs-4">
            <label for="pseudo">Pseudo</label>
            <input type="text" class="form-control" id="mem_pseudo" name="mem_pseudo" placeholder="Enter pseudo">
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
            <label for="mdp">Mot de passe</label>
            <input type="password" class="form-control" id="mem_mdp" name="mem_mdp" placeholder="Mot de passe">

        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4"> 
            <label for="nom">Nom</label>
            <input type="text" class="form-control"  id="mem_nom" name="mem_nom" placeholder="Nom">
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
            <label for="prenom">Prenom</label>
            <input type="text" class="form-control" id="mem_prenom" name="mem_prenom" placeholder="Prenom">
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
            <label for="mail">Mail</label>
            <input type="email" class="form-control" name="mem_mail" placeholder="Mail">
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
            <label for="dateNaiss">Date de Naissance</label>
            <input type="text" class="form-control" id="mem_date_naissance" name="mem_date_naissance" placeholder="Date de Naissance">
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-6">
            <label for="Adresse1">Adresse 1</label>
            <textarea class="form-control" id="mem_adresse1" name="mem_adresse1" rows="3"></textarea>
        </div>
      </div>  

      <div class="form-group">
        <div class="col-xs-6">
            <label for="Adresse2">Adresse 2</label>
            <textarea class="form-control" id="mem_adresse2" name="mem_adresse2" rows="3"></textarea>
        </div>
      </div> 

      <div class="form-group">
        <div class="col-xs-4">
            <label for="cp">Code Postale</label>
            <input type="text" class="form-control" id="mem_cp" name="mem_cp" placeholder="Code postale">
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
            <label for="ville">Ville</label>
            <input type="text" class="form-control" id="mem_ville" name="mem_ville" placeholder="Ville">
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-8">
            <label for="facebook">Facebook</label>
            <input type="url" class="form-control" id="mem_facebook" name="mem_facebook" placeholder="Facebook">
        </div>    
      </div>  

      <div class="form-group">
        <div class="col-xs-8">
            <label for="twitter">Twitter</label>
            <input type="url" class="form-control" id="mem_twitter" name="mem_twitter" placeholder="Twitter">
        </div>
      </div>    

      <button type="submit" class="btn btn-primary">Ajouter</button>
      <button type="reset" class="btn btn-danger">Annuler</button>
      <input type="hidden" name="_csrf" value="<%= _csrf %>">
    </form>
</div>